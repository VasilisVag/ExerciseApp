<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="@android:color/black">


    <!-- Κουμπί για να ανοίξει η κάμερα -->
    <Button
        android:id="@+id/btnOpenCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Camera"
        android:layout_gravity="center" />

    <!-- Εικόνα που εμφανίζει την εικόνα από την κάμερα -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"/>

    <!-- Κουμπί για να δημιουργήσεις το QR Code -->
    <Button
        android:id="@+id/btnGenerateQRCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate QR Code"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />

    <!-- Κουμπί για να σαρώσεις το QR Code -->
    <Button
        android:id="@+id/btnScanQRCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan QR Code"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />

    <!-- Κείμενο που θα εμφανίζει το αποτέλεσμα της σάρωσης -->
    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Result will be shown here"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />
    <ImageView
        android:id="@+id/qrImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />
    <Button
        android:id="@+id/btnGoToProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="<-Go Back to Profile"
        android:layout_marginTop="20dp"
        android:layout_gravity="center" />
</LinearLayout>